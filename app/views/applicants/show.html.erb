<h1><%= @applicant.name %></h1>
<p><%= @applicant.street_address %></p>
<p><%= @applicant.city %></p>
<p><%= @applicant.state %></p>
<p><%= @applicant.zip_code %></p>
<p><%= @applicant.description %></p>
<p><%= @applicant.application_status %></p>
<h3>Pets being applied for:</h3>
<ul>
  <% @applicant_pets.each do |pet| %>
    <li><h3><%= pet.name %></h3></li>
    <p>Age: <%= pet.age %></p>
    <p>Breed: <%= pet.breed %></p>
    <p>Adoptable: <%= pet.adoptable %></p>
  <% end %>
</ul>
<%if @applicant.descript %>
<div>
  <h2>Add a Description</h2>
  <%= form_with url: "/applicants/#{@applicant.id}", method: :patch, data: { turbo: false } do |form| %>
    <div>
      <%= form.label :description %>
    </div>
    <div>
      <%= form.text_area :description %>
    </div>  
    <div>
      <%= form.submit "Submit Application" %>
    </div>
  <% end %>
</div>
<% end %>
<div>
  <h2>Add a Pet to this Application</h2>
  <%= form_with url: "/applicants/#{@applicant.id}", method: :get, data: { turbo: false } do |form| %>
    <%= form.label :pet_name %>
    <%= form.text_field :pet_name %>
    <%= form.submit "Submit" %>
  <% end %>
</div>
<% @pets.each do |pet| %>
  <h3><%= pet.name %></h3><%= button_to "Adopt this Pet", "/applicants/#{@applicant.id}/#{pet.id}", method: :patch %>
  <p>Age: <%= pet.age %></p>
  <p>Breed: <%= pet.breed %></p>
  <p>Adoptable: <%= pet.adoptable %></p>
  <p>You can find <%= pet.name %> at <%= pet.shelter_name %>!</p>
<% end %>